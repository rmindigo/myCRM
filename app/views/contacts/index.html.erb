<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

<h1 id= 'contacts'>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First</th>
      <th>Last</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first %></td>
        <td><%= contact.last %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>

<%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %>

<% else %>

<div class="jumbotron">

<h3><%= link_to 'Click Here', new_user_registration_path, id: 'click_here' %> to sign up for your personal CRM!</h3>

<h3><%= link_to 'sign in', new_user_session_path %> </h3>

</div>

<% end %>
